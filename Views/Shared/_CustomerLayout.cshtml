<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fadlon Real Estate Office | @ViewBag.Title  </title>
    <link rel="icon" href="https://cdn5.f-cdn.com/contestentries/1308343/29084380/5ad85717cbaac_thumb900.jpg" type="image/x-icon">
    <link rel="stylesheet" href="~/Content/Style/Layout.css">

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Didact+Gothic|Fredoka+One|Righteous&display=swap" rel="stylesheet">
    @RenderSection("scripts", required: false)
</head>

<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Amos Fadlon Real Estate</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav ml-auto">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About Us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    <li>@Html.ActionLink("Gallery", "Gallery", "Properties")</li>
                    <li>@Html.ActionLink("Brokers", "Index", "Brokers")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Log in", "Login", "Home")</li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <div class="footer">
            <footer>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                <a href="https://www.facebook.com/Fadlon-Real-Estate-124652649071990" class="fa fa-facebook"></a>
                <a href="#" class="fa fa-twitter"></a>
                <a href="https://www.linkedin.com/in/jacobsongal/" class="fa fa-linkedin"></a>
                <a href="https://www.instagram.com/jacobsongal/" class="fa fa-instagram"></a>
                <a href="https://www.youtube.com/channel/UCsM9MNriY7zHHLYnXNzDg0g?view_as=subscriber" class="fa fa-youtube"></a>
                <a href="https://www.google.com/search?q=AMOS+FADLON&oq=AMOS+FADLON&aqs=chrome..69i57.8784j1j7&sourceid=chrome&ie=UTF-8" class="fa fa-google"></a>
                <p>Copyright &copy; @DateTime.Now.Year  Amos Fadlon Real Estate Office</p>
            </footer>
        </div>
        <hr />
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</body>
</html>

