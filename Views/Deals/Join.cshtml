
@{
    ViewBag.Title = "Join";
}
@using FadlonRealEstate.Models
@using FadlonRealEstate.Controllers
@model List<Group<string,Deal>>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Style/BrokersStyle/Index.css">
</head>

<body>
    <h2 style="margin-top:7rem; color:white;">Joining Deals & Properties</h2>

    <table class="table" style="color: black; background-image: url(../../Content/Resources/Imeges/contact.jpg);background-position:center; background-repeat: no-repeat; background-size: cover;">
        <tbody>
            @foreach (var group in Model)
            {
                <tr><th colspan="3" style=" font-size:20px; ">@group.Key</th></tr>
                <tr><th>Customer</th><th style="padding-left:90px">Deal Name</th></tr>

                foreach (var Deal in group.Values)
                {
                    <tr><td>@Deal.Customer.CustomerFirstName</td><td style="padding-left:100px; font-size:15px;">@Deal.Property.PropertyType</td><td></tr>
                }
            }
        </tbody>
    </table>

</body>