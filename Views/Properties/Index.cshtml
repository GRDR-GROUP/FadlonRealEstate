@model IEnumerable<FadlonRealEstate.Models.Property>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<div class="row row-cols-1 row-cols-md-2">

    @foreach (var item in Model)
    {
        <div class="col mb-4">
            <div class="card">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
            </div>
        </div>
    }
</div>











<div class="card" style="color:black; width: 18rem;">
    <img src="" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.PropertyName)</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item"> @Html.DisplayFor(modelItem => item.Stock)</li>
        <li class="list-group-item"> @Html.DisplayFor(modelItem => item.NumofRooms)</li>
        <li class="list-group-item"> @Html.DisplayFor(modelItem => item.city)</li>
        <li class="list-group-item"> @Html.DisplayFor(modelItem => item.Feautres)</li>
        <li class="list-group-item"> @Html.DisplayFor(modelItem => item.Stock)</li>
        <li class="list-group-item"> @Html.DisplayFor(modelItem => item.price)</li>
    </ul>

</div>